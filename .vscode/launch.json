  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_DEBUG": "1",
        "FLASK_ENV": "development",
        "SVC_RASPIMJPEG": "0",
        "SVC_SCHEDULER": "0",
        "SVC_RSYNC": "0"
      },
      "args": ["run", "--no-debugger"],
      // "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": false
    },
    {
      "name": "Python: Scheduler Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_DEBUG": "1",
        "FLASK_ENV": "development"
      },
      "args": ["scheduler", "start"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Rsync Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_DEBUG": "1",
        "FLASK_ENV": "development"
      },
      "args": ["rsync", "start"],
      "jinja": true,
      "justMyCode": true
    }    
  ]
}
